<body>
  <!-- Page content-->
  <div class="container mt-5">
    <div class="row">
      <div class="col-lg-12">
        <!-- Post content-->
        <article>
          <!-- Post header-->
          <header class="mb-4">
            <!-- Post title-->
            <h1 class="fw-bolder mb-1"><%= blog.title %></h1>
            <!-- Post meta content-->
            <div class="text-muted fst-italic mb-2">
              Posted on <%= new Date(blog.publishedAt).toDateString() %>
            </div>
            <!-- Post categories-->
            <span
              class="badge bg-warning text-dark text-decoration-none link-light"
              href="#"
              ><%= blog.category %></span
            >
          </header>
          <!-- Preview image figure-->
          <figure class="mb-4">
            <img
              class="img-fluid rounded w-50 mx-auto"
              src="<%= blog.thumbnail %>"
              alt="..."
            />
          </figure>
          <!-- Post content-->
          <section class="mb-5">
            <p class="fs-5 mb-4"><%= blog.description %></p>
          </section>
        </article>
      </div>
    </div>
  </div>
</body>
